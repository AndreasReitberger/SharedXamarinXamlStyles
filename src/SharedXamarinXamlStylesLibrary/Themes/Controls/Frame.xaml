<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    >
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/SharedColors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Frames -->
    <Style x:Key="Style.Core.Frame.Default" TargetType="Frame">
        <Setter Property="BorderColor" Value="{StaticResource Transparent}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Transparent}" />
        <Setter Property="OutlineColor" Value="{AppThemeBinding Light={StaticResource Light_ItemTemplateBorder}, Dark={StaticResource Dark_ItemTemplateBorder}}" />
    </Style>
</ResourceDictionary>